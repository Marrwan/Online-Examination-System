<div class="top-content">
    <div class="inner-bg">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 text">
            <h1><strong>Login</strong></h1>

          </div>
        </div>
        <div class="row">
          <div class="col-sm-3"><a class="btn btn-info" href="/" role="button">Go Back!</a></div>
          <div class="col-sm-6 form-box">
            <div class="form-top">
              <div class="form-top-left">
                <h3>Fill the form to sign in:</h3>
              </div>
            </div>
            <div class="form-bottom">
              <%- include('partials/message'); %>
              <form class="login-form" role="formlogin" action="login/<%=method%>" method="post">
                <div class="form-group">
                  <label class="sr-only" for="form-email">Email</label>
                  <input class="form-email form-control" id="form-username" type="email" name="email" placeholder="email">
                </div>
                <div class="form-group">
                  <label class="sr-only" for="form-password">Password</label>
                  <input class="form-password form-control" id="form-password" type="password" name="password" placeholder="password">
                </div>
                <button class="btn" type="submit">Login</button>
              </form>
            </div>
          </div>
          <div class="col-sm-3"></div>
        </div>
      </div>
    </div>
  </div>